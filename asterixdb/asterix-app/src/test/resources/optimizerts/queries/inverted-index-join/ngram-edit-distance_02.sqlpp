/*
 * Description    : Fuzzy joins two datasets, DBLP and CSX, based on the edit-distance function of their authors.
 *                  CSX has a 3-gram index on authors, and we expect the join to be transformed into an indexed nested-loop join.
 * Success        : Yes
 */

drop dataverse test if exists;
create dataverse test;

use test;

create type test.AType as
 closed {
  id : integer,
  text : string
};

create type test.BType as
 closed {
  id : integer,
  text : string
};

create dataset ASet(AType) primary key id;

create  dataset BSet(BType) primary key id;

create index ngram_index  on BSet (text) type ngram (3);

INSERT INTO ASet
    ([
    {"id": 123, "text":"text a"}
    ]);

INSERT INTO BSet
    ([
    {"id": 456, "text":"text b"}
    ]);

select element {'a text':a,'b text':b}
from  ASet as a,
      BSet as b
where ((test.`edit-distance`(a.text, b.text) < 10) and (a.id < b.id))
;
